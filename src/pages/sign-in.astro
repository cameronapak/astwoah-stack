---
import { actions } from "astro:actions";
import { setAuthCookiesFromResponse } from "@/actions/auth";
import Layout from "@/layouts/Layout.astro";
import Container from "@sections/Container.astro";
import Navbar from "@sections/Navbar.astro";

if (Astro.locals.session) {
  return Astro.redirect("/dashboard");
}

const result = Astro.getActionResult(actions.auth.signIn);
if (result?.data?.success) {
  setAuthCookiesFromResponse(result.data.cookiesToSet, Astro.cookies);
  return Astro.redirect("/dashboard");
}
---

<Layout title="Sign In">
  <Navbar title="Freedom Stack" sticky links={[{ text: "Home", href: "/" }]} />
  {result?.error && <div x-init={`toastErrorMessage = '${result.error.message.toString()}'`} class="sr-only" />}
  <Container align="center">
    <div class="flex flex-col gap-4 max-w-sm w-full">
      <h1>Sign In</h1>
      <form class="flex flex-col gap-4 max-w-sm w-full" method="POST" action={actions.auth.signIn}>
        {/* Email */}
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text">Email</span>
          </div>
          <input tabindex="1" type="email" placeholder="email@example.com" class="input input-bordered" name="email" />
        </label>

        {/* Password */}
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text">Password</span>
            <div class="tooltip" data-tip="Needs to be implemented">
              <a href="/forgot-password" tabindex="4" class="label-text-alt link opacity-20">Forgot password?</a>
            </div>
          </div>
          <input tabindex="2" type="password" placeholder="Password" class="input input-bordered" name="password" />
        </label>

        <button tabindex="3" class="mt-4 btn btn-primary" type="submit">Sign In</button>
      </form>
      <p>Don't have an account? <a href="/sign-up">Create an account</a></p>
    </div>
  </Container>
</Layout>
