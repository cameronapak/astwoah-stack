---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import HalfTextHalfImage from "@/components/sections/HalfTextHalfImage.astro";
import Quote from "@/components/sections/Quote.astro";
import Navbar from "@/components/sections/Navbar.astro";
import Footer from "@/components/sections/Footer.astro";
import Features from "@/components/sections/Features/index.astro";

const greyBackgroundImageSrc =
  "data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMSIgaGVpZ2h0PSIxIiB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciPjxyZWN0IHdpZHRoPSIxIiBoZWlnaHQ9IjEiIGZpbGw9IiNlMmU4ZjAiLz48L3N2Zz4=";

const features = [
  { title: "Astro", description: "Astro is a modern static site builder." },
  { title: "Alpine.js", description: "Alpine.js is a library for modern JavaScript." },
  { title: "HTMX", description: "HTMX is a library for modern HTML." },
  { title: "Preline UI", description: "Preline UI is a library for modern UI." },
  { title: "daisyUI", description: "daisyUI is a library for modern UI." },
  { title: "Clerk Auth", description: "Clerk Auth is a library for modern authentication." },
  { title: "Astro DB", description: "Astro DB is a library for modern databases." }
];

// The browser should always check freshness
Astro.response.headers.set("cache-control", "public, max-age=0, must-revalidate");

// The CDN should cache for a year, but revalidate if the cache tag changes
Astro.response.headers.set("netlify-cdn-cache-control", "s-maxage=31536000");

// Tag the page with the project slug
Astro.response.headers.set("netlify-cache-tag", "components");
---

<Layout
  title="Freedom Stack Boilerplate"
  description="A free full-stack boilerplate that feels freeing. Astro, HTMX, Alpine.js, Astro DB, Clerk Auth, Preline UI, & daisyUI."
>
  <Navbar
    title="Freedom Stack"
    links={[
      { text: "GitHub", href: "https://github.com/cameronapak/freedom-stack" },
      { text: "Coffee ☕", href: "https://buymeacoffee.com/campak" }
    ]}
  />
  <Hero
    title="Freedom Stack"
    subtitle="A full-stack Astro boilerplate that feels freeing and is free."
    ctaText="Get Started"
    ctaHref="/"
    secondaryCtaText="View on GitHub"
    secondaryCtaHref="https://github.com/cameronapak/freedom-stack"
  />
  <HalfTextHalfImage
    title="Components"
    subtitle="A collection of reusable components for the Freedom Stack."
    image={greyBackgroundImageSrc}
  />
  <HalfTextHalfImage
    title="Components"
    subtitle="A collection of reusable components for the Freedom Stack."
    image={greyBackgroundImageSrc}
    reverse
  />
  <Quote
    quote="enjoyed learning about Freedom Stack, Cam. Really a refreshing take on SaaS boilerplates ✨ plus I love Astro, too!"
    title="@poppacalypse"
    author="Carl Poppa"
    image={greyBackgroundImageSrc}
  />
  <Features features={features} />
  <Footer />
</Layout>
